{
  "name": "mm-loaders",
  "description": "Small, beautiful svg based loaders",
  "author": "Marc Schipperheyn (m.schipperheyn@gmail.com)",
  "user": "mschipperheyn",
  "version": "0.0.1-4",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config examples/webpack.config.babel.js --hot",
    "build": "npm run build:lib && npm run build:dist",
    "prebuild:lib": "rm -rf lib/*",
    "build:lib": "babel --out-dir lib src",
    "prebuild:umd": "rm -rf dist/*",
    "prebuild:dist": "rm -rf dist/*",
    "build:dist": "rollup -c && cross-env NODE_ENV=production rollup -c",
    "build:watch": "npm run build:lib -- --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:lint": "eslint . --ext .js --ext .jsx --ignore-path .gitignore --ignore-pattern dist --cache",
    "demo:build": "cross-env NODE_ENV=production webpack --config demo/webpack.config.babel.js",
    "lint": "eslint 'src/**/*.js'",
    "prepublish": "npm run build"
  },
  "main": "dist-modules",
  "module": "src",
  "jsnext:main": "dist/mm-loaders.js",
  "dependencies": {
    "styled-components": ">=1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "cross-env": "^3.2.4",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1",
    "html-loader": "^0.4.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-visualizer": "^0.2.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-hot-middleware": "^2.17.1"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mschipperheyn/mm-loaders.git"
  },
  "homepage": "https://github.com/mschipperheyn/mm-loaders/",
  "bugs": {
    "url": "https://github.com/mschipperheyn/mm-loaders/issues"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ]
  },
  "keywords": [
    "react",
    "reactjs",
    "mm-loaders"
  ],
  "license": "MIT",
  "pre-push": [
    "test"
  ]
}
